<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

    <bean name="dependencyCls" class="org.constructorInjection.referenceType.DependencyClass">
        <constructor-arg value="22" type="java.lang.String" index="0"/>
        <constructor-arg value="Pune" type="java.lang.String" index="1"/>
        <constructor-arg value="Software Developer" type="java.lang.String" index="2"/>
    </bean>

    <bean name="dependentCls" class="org.constructorInjection.referenceType.DependentClass">
        <constructor-arg value="Tejas Joshi" type="java.lang.String" index="0"/>
        <constructor-arg ref="dependencyCls"/>
    </bean>

</beans>